<%= form_for(@transaction) do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% @transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <%= f.label :type %><br>
      <%= f.select :type, Transaction.types.map {|r| [r.humanize]}, {}, disabled: @type != "Transaction" %>
  </div>
  <% if @type !="Transaction" %>
      <input type="hidden" name="<%=@type.downcase%>[type]" value="<%=@type%>">
  <% end %>

  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "Transaction Date" %><br />
    <%= f.date_field :trans_date %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>