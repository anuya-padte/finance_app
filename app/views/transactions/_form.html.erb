<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@transaction) do |f| %>
      <% if @transaction.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

          <ul>
          <% @transaction.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
          <%= f.label :type %><br>
          <%= f.select :type, Transaction.types.map {|r| [r.humanize]}, {}, disabled: @type != "Transaction" %>
      </div>
      <% if @type !="Transaction" %>
          <input type="hidden" name="<%=@type.downcase%>[type]" value="<%=@type%>">
      <% end %>

      <div class="field">
          <%= f.label "Category" %> <%= link_to "(Add new category)", "/category?type=#{@type}" %>  <br>
          <select name = "<%=@type.downcase%>[category_id]" required>
            <option disabled selected> Select</option>
            <% @categories.each do |category| %>
              <option value = "<%= category.id %>" <% if @transaction.category_id == category.id %>selected<%end%> > <%= category.name %> </option>
            <% end %>
          </select>
      </div>

      <div class="field">
        <%= f.label :amount %><br />
        <%= f.text_field :amount, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label "Transaction Date" %><br />
        <%= f.date_field :trans_date %>
      </div>

      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
    <%= link_to 'Back', sti_transaction_path("Transaction") %>
<br><br>
  </div>
</div>